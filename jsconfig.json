{
  "compilerOptions": {
    "baseUrl": "./src/",
    "paths": {
      "components/*": ["./components/*"]
    },
    "target": "es6",
    "module": "commonjs",
    // "allowSyntheticDefaultImports": true,
    "checkJs": false,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react"
  },
  "include": ["src/**/*.js", "src/**/*.jsx"],
  "exclude": ["node_modules", "lib", "webpack.config.js"],
  "typeAcquisition": {
    "include": [
      "react",
      "react-dom",
      "redux",
      "react-redux",
      "ts-node",
      "node",
      "webpack",
      "webpack-env"
    ]
  }
}
